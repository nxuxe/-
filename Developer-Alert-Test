local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Developer = "Ardwyck"

local AlertActive = false

local function createDeveloperJoinAlert()
    local existingUI = LocalPlayer:FindFirstChildOfClass("PlayerGui"):FindFirstChild("DeveloperAlertUI")
    if existingUI then
        return existingUI
    end

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "DeveloperAlertUI"
    ScreenGui.Parent = LocalPlayer:FindFirstChildOfClass("PlayerGui")

    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(0.25, 0, 0.12, 0)  -- Slightly smaller
    Frame.Position = UDim2.new(0.02, 0, 0.05, 0)  -- Middle left & top (sandwiched)
    Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)  -- Black background
    Frame.BackgroundTransparency = 0.8  -- 80% transparency
    Frame.Parent = ScreenGui

    local TextLabel = Instance.new("TextLabel")
    TextLabel.Text = "Developer Join Server! " .. Developer .. " has joined!"
    TextLabel.Size = UDim2.new(1, 0, 1, 0)
    TextLabel.TextScaled = true
    TextLabel.BackgroundTransparency = 1  -- No background on text
    TextLabel.TextColor3 = Color3.fromRGB(0, 0, 255)  -- Blue text
    TextLabel.Parent = Frame

    return ScreenGui, Frame
end

local function removeDeveloperJoinAlert()
    local existingUI = LocalPlayer:FindFirstChildOfClass("PlayerGui"):FindFirstChild("DeveloperAlertUI")
    if existingUI then
        existingUI:Destroy()
    end
end

local function showDeveloperJoinAlert()
    if AlertActive then return end
    AlertActive = true

    local ScreenGui, Frame = createDeveloperJoinAlert()

    local function keepAlertFlashing()
        while AlertActive do
            wait(0.25)
            if not ScreenGui or not ScreenGui.Parent then
                ScreenGui, Frame = createDeveloperJoinAlert()
            end
            Frame.Visible = not Frame.Visible
        end
        removeDeveloperJoinAlert()
    end

    task.spawn(keepAlertFlashing)
end

Players.PlayerAdded:Connect(function(player)
    if player.Name == Developer then
        showDeveloperJoinAlert()
    end
end)

Players.PlayerRemoving:Connect(function(player)
    if player.Name == Developer then
        AlertActive = false
    end
end)

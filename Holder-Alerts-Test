local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Holder = "0uxnx"

local AlertActive = false

local function createHolderJoinAlert()
    local existingUI = LocalPlayer:FindFirstChildOfClass("PlayerGui"):FindFirstChild("HolderAlertUI")
    if existingUI then
        return existingUI
    end

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "HolderAlertUI"
    ScreenGui.Parent = LocalPlayer:FindFirstChildOfClass("PlayerGui")

    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(0.08, 0, 0.04, 0)  -- UI reduced by about two-thirds
    Frame.Position = UDim2.new(0.02, 0, 0.05, 0)  -- Middle left & top (sandwiched)
    Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)  -- Black background
    Frame.BackgroundTransparency = 0.8  -- 80% transparency
    Frame.Parent = ScreenGui

    local TextLabel = Instance.new("TextLabel")
    TextLabel.Text = "Holder Join Server ! " .. Holder .. " has joined !"
    TextLabel.Size = UDim2.new(1, 0, 1, 0)
    TextLabel.TextScaled = false
    TextLabel.TextSize = 20  -- Text size reduced by about one-third
    TextLabel.BackgroundTransparency = 1  -- No background on text
    TextLabel.TextColor3 = Color3.fromRGB(0, 0, 255)  -- Blue text
    TextLabel.Parent = Frame

    return ScreenGui, Frame
end

local function removeHolderJoinAlert()
    local existingUI = LocalPlayer:FindFirstChildOfClass("PlayerGui"):FindFirstChild("HolderAlertUI")
    if existingUI then
        existingUI:Destroy()
    end
end

local function showHolderJoinAlert()
    if AlertActive then return end
    AlertActive = true

    local ScreenGui, Frame = createHolderJoinAlert()

    local function keepAlertFlashing()
        while AlertActive do
            wait(0.25)
            if not ScreenGui or not ScreenGui.Parent then
                ScreenGui, Frame = createHolderJoinAlert()
            end
            Frame.Visible = not Frame.Visible
        end
        removeHolderJoinAlert()
    end

    task.spawn(keepAlertFlashing)
end

Players.PlayerAdded:Connect(function(player)
    if player.Name == Holder then
        showHolderJoinAlert()
    end
end)

Players.PlayerRemoving:Connect(function(player)
    if player.Name == Holder then
        AlertActive = false
    end
end)

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Holder = "0uxnx"  -- Change this to the Holder's username

local function createHolderJoinAlert()
    if LocalPlayer:FindFirstChildOfClass("PlayerGui"):FindFirstChild("HolderAlertUI") then
        return LocalPlayer.PlayerGui.HolderAlertUI
    end

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "HolderAlertUI"
    ScreenGui.Parent = LocalPlayer:FindFirstChildOfClass("PlayerGui")

    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(0.3, 0, 0.15, 0)
    Frame.Position = UDim2.new(0.35, 0, 0.4, 0)
    Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 255)  -- Blue color for Holder alert
    Frame.Parent = ScreenGui

    local TextLabel = Instance.new("TextLabel")
    TextLabel.Text = "Holder Join Server! " .. Holder .. " has joined!"
    TextLabel.Size = UDim2.new(1, 0, 1, 0)
    TextLabel.TextScaled = true
    TextLabel.BackgroundTransparency = 1
    TextLabel.TextColor3 = Color3.new(1, 1, 1)
    TextLabel.Parent = Frame

    return ScreenGui, Frame
end

local function showHolderJoinAlert(player)
    local ScreenGui, Frame = createHolderJoinAlert()

    local function keepAlertFlashing()
        while true do
            wait(0.25)
            if not ScreenGui or not ScreenGui.Parent then
                ScreenGui, Frame = createHolderJoinAlert()
            end
            Frame.Visible = not Frame.Visible
        end
    end

    task.spawn(keepAlertFlashing)
end

Players.PlayerAdded:Connect(function(player)
    if player.Name == Holder then
        showHolderJoinAlert(player)
    end
end)

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local ysrList = { "0uxnx" }
local AlertActive = false

local function createYsrJoinAlert()
    local existingUI = LocalPlayer:FindFirstChildOfClass("PlayerGui"):FindFirstChild("ysrAlertUI")
    if existingUI then
        existingUI:Destroy()
    end

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "ysrAlertUI"
    ScreenGui.ResetOnSpawn = false
    ScreenGui.Parent = LocalPlayer:FindFirstChildOfClass("PlayerGui")

    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(0.15, 0, 0.05, 0)
    Frame.Position = UDim2.new(0.02, 0, 0.06, 0)
    Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    Frame.BackgroundTransparency = 0.7
    Frame.Parent = ScreenGui

    local TextLabel = Instance.new("TextLabel")
    TextLabel.Text = "! ! ! YSR ! ! !"
    TextLabel.Size = UDim2.new(1, 0, 1, 0)
    TextLabel.TextScaled = true
    TextLabel.TextSize = 28
    TextLabel.BackgroundTransparency = 1
    TextLabel.TextColor3 = Color3.fromRGB(255, 105, 180) -- Pink color
    TextLabel.Parent = Frame

    local Sound = Instance.new("Sound")
    Sound.SoundId = "rbxassetid://82719020266339"
    Sound.Volume = 5  -- Increased volume
    Sound.Looped = false
    Sound.Parent = ScreenGui

    Sound.Loaded:Connect(function()
        Sound:Play()
    end)

    task.delay(5, function()
        ScreenGui:Destroy()
        AlertActive = false
    end)
end

local function isYsr(name)
    for _, ysr in ipairs(ysrList) do
        if name == ysr then
            return true
        end
    end
    return false
end

Players.PlayerAdded:Connect(function(player)
    if isYsr(player.Name) and not AlertActive then
        AlertActive = true
        createYsrJoinAlert()
    end
end)

task.spawn(function()
    wait(2)
    if not AlertActive then
        AlertActive = true
        createYsrJoinAlert()
    end
end)

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local ysrList = { "0uxnx" }

local AlertActive = false

local function createYsrJoinAlert()
    local existingUI = LocalPlayer:FindFirstChildOfClass("PlayerGui"):FindFirstChild("ysrAlertUI")
    if existingUI then
        return existingUI
    end

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "ysrAlertUI"
    ScreenGui.ResetOnSpawn = false
    ScreenGui.Parent = LocalPlayer:FindFirstChildOfClass("PlayerGui")

    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(0.08, 0, 0.04, 0)
    Frame.Position = UDim2.new(0.02, 0, 0.06, 0)
    Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    Frame.BackgroundTransparency = 0.8
    Frame.Parent = ScreenGui

    local TextLabel = Instance.new("TextLabel")
    TextLabel.Text = " ! ! ! YSR ! ! ! "
    TextLabel.Size = UDim2.new(1, 0, 1, 0)
    TextLabel.TextScaled = false
    TextLabel.TextSize = 26
    TextLabel.BackgroundTransparency = 1
    TextLabel.TextColor3 = Color3.fromRGB(0, 0, 255)
    TextLabel.Parent = Frame

    local Sound = Instance.new("Sound")
    Sound.SoundId = "rbxassetid://82719020266339"
    Sound.Volume = 1
    Sound.Looped = false
    Sound.Parent = ScreenGui
    Sound:Play()

    return ScreenGui
end

local function removeYsrJoinAlert()
    local existingUI = LocalPlayer:FindFirstChildOfClass("PlayerGui"):FindFirstChild("ysrAlertUI")
    if existingUI then
        existingUI:Destroy()
    end
end

local function showYsrJoinAlert()
    if AlertActive then return end
    AlertActive = true
    createYsrJoinAlert()
end

local function isYsr(name)
    for _, ysr in ipairs(ysrList) do
        if name == ysr then
            return true
        end
    end
    return false
end

Players.PlayerAdded:Connect(function(player)
    if isYsr(player.Name) then
        showYsrJoinAlert()
    end
end)

Players.PlayerRemoving:Connect(function(player)
    if isYsr(player.Name) then
        AlertActive = false
        removeYsrJoinAlert()
    end
end)
